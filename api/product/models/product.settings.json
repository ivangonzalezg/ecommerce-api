{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "string",
      "unique": true,
      "required": false,
      "regex": "^[a-z0-9\\-]*$"
    },
    "quantity": {
      "type": "integer",
      "min": "0",
      "required": false,
      "default": "0"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "category": {
      "model": "category"
    },
    "price": {
      "type": "integer",
      "required": true,
      "min": "0"
    },
    "discount": {
      "type": "integer",
      "default": 0,
      "max": 100,
      "min": 0
    },
    "comment": {
      "type": "text",
      "private": true
    }
  }
}
